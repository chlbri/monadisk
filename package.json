{
  "name": "@bemedev/monadisk",
  "version": "0.1.2",
  "license": "MIT",
  "main": "lib/index.cjs",
  "typings": "lib/index.d.ts",
  "module": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/monadisk"
  },
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "author": {
    "name": "chlbri",
    "email": "bri_lvi@icloud.com",
    "url": "https://bemedev.vercel.app"
  },
  "files": [
    "lib",
    "public"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "node": "./lib/index.cjs",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    },
    "./*": {
      "types": "./lib/*.ts",
      "import": "./lib/*.js",
      "node": "./lib/*.cjs",
      "require": "./lib/*.cjs",
      "default": "./lib/*.js"
    }
  },
  "scripts": {
    "rimraf": "pnpm dlx rimraf",
    "build": "pnpm run rimraf lib && pnpm run rollup",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run test && pnpm run prettier && pnpm run p-q",
    "ci:admin": "pnpm run remove && pnpm run upgrade && pnpm run ci",
    "config": "pnpm install",
    "config:off": "pnpm install --offline",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "p-q": "pretty-quick --pattern \"**/*.*(ts|tsx)\"",
    "prepare": "husky",
    "prepublishOnly": "pnpm run lint && pnpm run build",
    "pretest": "pnpm run build && pnpm run size",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "remove": "pnpm run rimraf -rf node_modules pnpm-lock.yaml",
    "rinit": "pnpm run remove && pnpm run config:off",
    "rollup": "rollup -c",
    "size": "size-limit",
    "test:coverage": "vitest run",
    "test": "pnpm run test:coverage --no-coverage",
    "test:only": "vitest run ./src/monad.test.ts",
    "upgrade": "pnpm dlx @bemedev/upgrade-npm-package"
  },
  "size-limit": [
    {
      "path": "lib/*.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/*.cjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@bemedev/build-tests": "^0.1.2",
    "@bemedev/core": "^0.1.2",
    "@bemedev/rollup-config": "^0.2.2",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.1.1",
    "@bemedev/vitest-extended": "^1.5.3",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@size-limit/file": "^11.2.0",
    "@types/node": "^24.7.0",
    "@types/shelljs": "^0.8.17",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "onchange": "^7.1.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rollup": "^4.52.4",
    "shelljs": "^0.10.0",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "valibot": "1.1.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@bemedev/core": "^0.1.2",
    "typescript": "^5.9.3"
  }
}